

<%if logged_in?%>
	<h1>Posts</h1>
	<div class = "center-stuff">
		<%= link_to 'New Post', new_post_path, class: "btn btn-primary"%>
	</div>
	<br>
	<div>
	<% Post.all.order('created_at desc').each do |post|%>
		<div class = "post-container container">
			<div>
				<span id = "time-stamp-post"><%=post.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%m-%d-%Y")%></span>

				<span id = "time-stamp-hour-post"><%=post.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%I:%M%p")%>
				</span>

				
			</div>
			<span id = "author-post"><%=post.user.name %></span>


			<div id = "subject-post">Subject: <%=post.subject%></div>
			
			<div id = "body-post">
				<%=post.body%>
			</div>

			<%if current_user == post.user%>
			<div>
				<ul id = "post-footer">
					<li> <%= link_to 'Delete', '#'%> </l1>
				</ul>
			</div>
			<%end%>
		</div>
		<br>
	<%end%>
	</div>
<%else %>
	<div class="jumbotron text-center">
	  <h1>Welcome to Members Only</h1>
	  <p>Sign in to see posts from members</p> 
	  <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
<%end%>